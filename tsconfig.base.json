{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@tat-protocol/*": ["./*/src"],
      "*": ["node_modules/*"]
    },
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
  },
  "references": [
    { "path": "hdkeys" },
    { "path": "utils" },
    { "path": "storage" },
    { "path": "token" },
    { "path": "pocket" },
    { "path": "nwpc" },
    { "path": "forge" },
  ],
  "exclude": ["node_modules", "dist",  "**/.svelte2tsx-language-server-files", "*.svelte", "**/*copy*.ts"]
} 