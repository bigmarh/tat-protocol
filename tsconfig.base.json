{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ES2020",
      "DOM"
    ],

    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@tat-protocol/*": [
        "./packages/*/src"
      ],
      "*": [
        "node_modules/*"
      ]
    },
    "types": [
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
  },
  "references": [
    { "path": "packages/boxoffice" },
    { "path": "packages/turnstile" },
    { "path": "packages/hdkeys" },
    { "path": "packages/utils" },
    { "path": "packages/storage" },
    { "path": "packages/token" },
    { "path": "packages/pocket" },
    { "path": "packages/nwpc" },
    { "path": "packages/forge" },
    { "path": "packages/config" },
    { "path": "packages/tdk" }
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/.svelte2tsx-language-server-files",
    "*.svelte",
    "**/*copy*.ts"
  ]
}