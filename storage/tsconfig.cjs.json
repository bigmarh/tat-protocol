{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": ["ES2020"],
        "declaration": true,
        "declarationDir": "./dist/types",
        "outDir": "./dist/cjs",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "composite": true
    },
    "include": ["*.ts", "lib/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
} 