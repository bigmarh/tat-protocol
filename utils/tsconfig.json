{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@tat-protocol/*": ["../*/src"]
    },
    "composite": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false
  },
  "include": ["src/**/*", "*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
} 