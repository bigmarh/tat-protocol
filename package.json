{
  "name": "@tat-protocol/sdk",
  "private": true,
  "version": "1.0.0",
  "description": "TAT Protocol Monorepo - Core Protocol Packages",
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "clean": "turbo run clean",
    "prepare": "husky install",
    "forge": "pnpm tsx watch --watch-path forge/src forge/src/examples/runForge.ts",
    "forge-fungible": "pnpm tsx watch --watch-path forge/src forge/src/examples/runFungibleForge.ts",
    "calculator": "pnpm tsx nwpc/src/examples/server.ts",
    "noisey-client": "npx tsx nwpc/src/examples/noisey-client.ts",
    "client": "pnpm tsx nwpc/src/examples/client.ts",
    "pocket": "pnpm tsx pocket/src/examples/runPocket.ts"
  },
  "dependencies": {
    "@noble/hashes": "^1.0.0",
    "@nostr-dev-kit/ndk": "2.14.15",
    "localdrive": "^2",
    "nostr-tools": "^2.12.0",
    "@tat-protocol/forge": "workspace:*",
    "@tat-protocol/hdkeys": "workspace:*",
    "@tat-protocol/nwpc": "workspace:*",
    "@tat-protocol/pocket": "workspace:*",
    "@tat-protocol/storage": "workspace:*",
    "@tat-protocol/token": "workspace:*",
    "@tat-protocol/utils": "workspace:*"
    
  },
  "devDependencies": {
    "@types/node": "^22.15.21",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.15.0",
    "husky": "^9.0.11",
    "lint-staged": "^16.0.0",
    "prettier": "^3.2.5",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "packageManager": "pnpm@10.10.0",
  "workspaces": [
    "hdkeys",
    "storage",
    "utils",
    "token",
    "nwpc",
    "forge",
    "pocket"
  ]
}