{
  "name": "@tat-protocol/monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "TAT Protocol Monorepo - Core Protocol Packages",
  "scripts": {
    "build": "find . -type d -name \"dist\" -exec rm -rf {} + && pnpm build:core && pnpm build:token && pnpm build:apps",
    "build:core": "pnpm --filter hdkeys build && pnpm --filter storage build && pnpm --filter utils build",
    "build:token": "pnpm --filter token build",
    "build:apps": "pnpm --filter nwpc build && pnpm --filter forge build && pnpm --filter pocket build",
    "test": "pnpm -r test",
    "lint": "pnpm -r --filter=!forge lint && pnpm --filter=forge lint",
    "format": "pnpm -r format",
    "clean": "pnpm -r clean",
    "prepare": "husky install",
    "forge": "npx tsx forge/runForge.ts",
    "calculator": "npx tsx nwpc/examples/server.ts",
    "noisey-client": "npx tsx nwpc/examples/noisey-client.ts",
    "client": "npx tsx nwpc/examples/client.ts",
    "pocket": "npx tsx pocket/runPocket.ts"
  },
  "dependencies": {
    "@tat-protocol/forge": "workspace:*",
    "@tat-protocol/nwpc": "workspace:*",
    "@tat-protocol/storage": "workspace:*",
    "@tat-protocol/hdkeys": "workspace:*",
    "@tat-protocol/utils": "workspace:*",
    "@tat-protocol/token": "workspace:*",
    "@tat-protocol/pocket": "workspace:*"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "packageManager": "pnpm@8.15.4",
  "workspaces": [
    "hdkeys",
    "storage",
    "utils",
    "token",
    "nwpc",
    "forge",
    "pocket"
  ]
}