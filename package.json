{
  "name": "@tat-protocol/sdk",
  "private": true,
  "version": "1.0.0",
  "description": "TAT Protocol Monorepo - Core Protocol Packages",
  "scripts": {
    "build": "find . -type d -name \"dist\" -exec rm -rf {} + && pnpm exec tsc -b ",
    "test": "pnpm -r test",
    "lint": "pnpm -r --filter=!forge lint && pnpm --filter=forge lint",
    "format": "pnpm -r format",
    "clean": "pnpm -r clean",
    "prepare": "husky install",
    "forge": "npx tsx forge/src/examples/runForge.ts",
    "calculator": "npx tsx nwpc/src/examples/server.ts",
    "noisey-client": "npx tsx nwpc/src/examples/noisey-client.ts",
    "client": "npx tsx nwpc/src/examples/client.ts",
    "pocket": "npx tsx pocket/src/examples/runPocket.ts"
  },
  "dependencies": {
    "@noble/hashes": "^1.0.0",
    "@nostr-dev-kit/ndk": "^2.14.9",
    "@tat-protocol/forge": "workspace:*",
    "@tat-protocol/hdkeys": "workspace:*",
    "@tat-protocol/nwpc": "workspace:*",
    "@tat-protocol/pocket": "workspace:*",
    "@tat-protocol/storage": "workspace:*",
    "@tat-protocol/token": "workspace:*",
    "@tat-protocol/utils": "workspace:*",
    "localdrive": "^2",
    "nostr-tools": "^2.12.0",
    "tsx": "^4.19.4"
  },
  "devDependencies": {
    "@types/node": "^20.17.45",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "packageManager": "pnpm@10.10.0",
  "workspaces": [
    "hdkeys",
    "storage",
    "utils",
    "token",
    "nwpc",
    "forge",
    "pocket"
  ]
}