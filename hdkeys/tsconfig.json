{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@tat-protocol/*": ["../*/src"]
    },
    "composite": true,
    "typeRoots": ["./node_modules/@types", "../node_modules/@types", "./lib"],
    "skipLibCheck": true,
    "types": ["node", "bip39"]
  },
  "references": [
    { "path": "../types" },
    { "path": "../utils" }
  ],
  "include": ["lib/**/*", "index.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
} 