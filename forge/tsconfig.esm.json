{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "./dist/esm",
    "rootDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@tat-protocol/*": ["../*/src"]
    },
    "types": ["node"],
    "composite": true
  },
  "references": [
    { "path": "../types" },
    { "path": "../utils" },
    { "path": "../storage" },
    { "path": "../hdkeys" }
  ],
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
} 