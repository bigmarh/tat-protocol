{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@tat-protocol/*": ["../*/src"]
    },
    "composite": true,
    "typeRoots": ["./node_modules/@types", "../node_modules/@types"],
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false
  },
  "references": [
    { "path": "../types" },
    { "path": "../utils" },
    { "path": "../storage" }
  ],
  "include": ["lib/**/*", "index.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
} 