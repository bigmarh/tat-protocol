{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://tat-protocol.org/schemas/methods/transfer-request.schema.json",
  "title": "NWPC Transfer Request",
  "description": "Parameters for transfer method",
  "type": "object",
  "required": ["tokens", "recipient"],
  "properties": {
    "tokens": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "description": "JWT token string"
      },
      "description": "Array of tokens to transfer"
    },
    "recipient": {
      "type": "string",
      "pattern": "^[0-9a-f]{64}$",
      "description": "Recipient public key"
    },
    "amount": {
      "type": "number",
      "exclusiveMinimum": 0,
      "description": "Amount to transfer (for fungible tokens)"
    },
    "unlock": {
      "type": "object",
      "properties": {
        "preimage": {
          "type": "string",
          "description": "HTLC preimage"
        },
        "signature": {
          "type": "string",
          "description": "P2PK signature proof"
        }
      },
      "description": "Unlock parameters if tokens are locked"
    }
  },
  "additionalProperties": false
}
