{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://tat-protocol.org/schemas/methods/verify-request.schema.json",
  "title": "NWPC Verify Request",
  "description": "Parameters for verify method",
  "type": "object",
  "required": ["token_hashes"],
  "properties": {
    "token_hashes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^[0-9a-f]{64}$",
        "description": "Token hash (64 hex characters)"
      },
      "description": "Array of token hashes to verify"
    }
  },
  "additionalProperties": false
}
